<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="cn.edu.usst.bookkeeping">

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.Bookkeeping"
        android:hardwareAccelerated = "false"
        android:largeHeap = "true">
        <activity
            android:name=".activity.MainActivity"
            android:exported="true"
            tools:ignore="WrongManifestParent">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MainActivity2" />
        <activity android:name=".activity.RegisterActivity" />
        <activity android:name=".activity.DealRecordActivity" />
        <activity android:name=".activity.ManageRecordActivity" />
        <activity android:name=".activity.RecordActivity" />
        <activity android:name=".activity.SearchRecordActivity" />
        <activity android:name=".activity.ChangePwdActivity" />
    </application>

</manifest>